#!/usr/bin/awk -f
BEGIN {
	system("snap list --all > /tmp/snaplist");
	ARGC=2;
	ARGV[1]="/tmp/snaplist"
	system("sudo -K");
}
{
	if ( /disabled/ ) {
		system("sudo snap remove "$1" --revision "$3);
	}
}
END {
	system("sudo find /var/lib/snapd/cache/ -type f -exec rm -v {} \\;");
	system("rm /tmp/snaplist");
	system("sudo -K");
}
